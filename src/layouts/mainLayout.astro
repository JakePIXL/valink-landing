---
import Logo from "../components/logo.astro";
import "../styles/global.postcss"
import { Sprite } from 'astro-icon'

const { title, current_page } = Astro.props
---

<script>
  let burger: Element = document.querySelector('.navbar-burger') as Element;
  let menu: Element = document.querySelector('.navbar-menu') as Element;

  burger.addEventListener('click', function() {
      menu.classList.toggle('hidden');
  });
</script>

<script>
  // @ts-nocheck
  let theme = localStorage.getItem('theme');
  if (!theme) {
    theme = window.matchMedia('(prefers-color-scheme: dark)').matches ? 'neubrutalism-dark' : 'neubrutalism';
  }
  document.body.dataset.theme = theme;

  const themeSelector = document.querySelector('#themeSelector');
  themeSelector.value = theme;

  themeSelector.addEventListener('change', function() {
    theme = this.value;
    document.body.dataset.theme = theme;
    localStorage.setItem('theme', theme);
  });
</script>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Valink Solutions | {title}</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.1.2/dist/tailwind.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/daisyui/dist/full.js"></script>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Martian+Mono:wght@100;200;300;400;500;600;700;800&display=swap');
        html, body {
            font-family: 'Martian Mono', monospace;
        }
    </style>
</head>
<body data-theme="neubrutalism" class="flex flex-col h-screen bg-base-200">
<Sprite.Provider>

    <!-- Header Section -->
    <header class="card bg-base-100 text-base-content">
      <div class="container mx-auto grid grid-cols-3 p-4">
        <a href="/" class="col-start-1 col-span-1 w-50">
            <Logo />
        </a>
        <div class="flex col-start-3 col-span-1 lg:hidden text-right items-center justify-end">
            <button class="navbar-burger fill-base-content">
                <Sprite pack="mdi" name="menu" class="text-base-content h-10 w-10"/>
            </button>
        </div>
        <nav class="mt-4 lg:mt-0 navbar-menu hidden lg:flex justify-end lg:col-start-2 lg:col-span-2 col-span-3 row-start-2 lg:row-start-1 items-center">
          <div class="flex flex-col lg:flex-row items-center gap-4">
            <a href="/" class={`btn w-full lg:max-w-[100px] ${current_page === 'home' ? 'btn-primary' : ''}`}>Home</a>
            <a href="/projects" class={`btn w-full lg:max-w-[100px] ${current_page === 'projects' ? 'btn-primary' : ''}`}>Projects</a>
            <a href="/hardware" class={`btn w-full lg:max-w-[100px] ${current_page === 'hardware' ? 'btn-primary' : ''}`}>Hardware</a>
            <a href="/blog" class={`btn w-full lg:max-w-[100px] ${current_page === 'blog' ? 'btn-primary' : ''}`}>Blog</a>
            <div class="flex flex-row w-full lg:w-[170px]">
              <select id="themeSelector" class="select w-full">
                <option value="neubrutalism">Light</option>
                <option value="neubrutalism-dark">Dark</option>
              </select>
            </div>
          </div>
        </nav>
      </div>
    </header>

    <div class="card flex flex-col flex-grow bg-base-100 text-base-content">
        <slot />
    </div>

    <!-- Footer Section -->
    <footer class="card p-4 bg-base-100 text-base-content">
        <div class="container mx-auto flex flex-col-reverse lg:flex-row justify-between items-center gap-4">
            <blockquote class="flex-1 order-1 lg:order-2 text-center lg:text-right opacity-75">
                <p class="italic">"Empowering Aboriginal communities through holistic health and healing."</p>
            </blockquote>
            <p class="lg:mt-0 flex-1 lg:order-1 text-center lg:text-left">Â© 2023 Valink Solutions Ltd.</p>
        </div>
    </footer>

</Sprite.Provider>
</body>
</html>
